# Database
DATABASE_URL=sqlite+aiosqlite:///./bp_chat.db

# Server
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS (update for production)
CORS_ORIGINS=["http://localhost:3000"]

# API Keys (REQUIRED - Set these with your actual keys)
REQUESTY_AI_API_KEY=your-requesty-ai-api-key-here
